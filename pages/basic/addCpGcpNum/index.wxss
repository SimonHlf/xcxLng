@import '../../../style/cardNumPicker.wxss';
page{
	height: 100%;
	background: #fff;
}
.modTit{
	height: 80rpx;
	line-height: 80rpx;
	border-bottom: 1rpx solid #e8e8e8;
	position: relative;
	margin-bottom: 30rpx;
	background: #efefef;
}
.modTit view.lineView{
	width: 8rpx;
	height: 36rpx;
	position: absolute;
	left: 30rpx;
	top: 22rpx;
	background: #3c7de9;
}
.modTit view:last-child{
	margin-left: 20rpx;
	float: left;
	font-size: 28rpx;
	color: #121212;
}
.cardNumWrap{
	height: 80rpx;
	line-height: 80rpx;
}
.cardNumWrap .provView,
.cardNumWrap .wordsView{
	width: 18%;
	float: left;
}
.cardNumWrap .provView{
	height: 78rpx;
	border:1rpx solid #e8e8e8;
	border-radius: 6rpx;
	text-align: center;
	font-size: 30rpx;
	color: #121212;
}
.cardNumWrap .wordsView{
	height: 78rpx;
	border:1rpx solid #e8e8e8;
	margin:0 20rpx;
	text-align: center;
	font-size: 32rpx;
	color: #121212;
}
.cardNumWrap .cardNumInp{
	float: left;
	width: 56%;
	height:100%;
}
.cardNumWrap .cardNumInp input{
	height: 78rpx;
	border:1rpx solid #e8e8e8;
	font-size: 30rpx;
	color: #121212;
	padding-left: 4%;
	border:1rpx solid #e8e8e8;
}
.saveBtn{
	width: 500rpx;
	height: 80rpx;
	line-height: 80rpx;
	background: #3c7de9;
	color: #fff;
	text-align: center;
	font-size: 31rpx;
	padding: 0;
	margin-top: 40rpx;
	font-weight: normal;
	position: relative;
	border-radius: 6rpx;
}