.modTit{
	height: 80rpx;
	line-height: 80rpx;
	border-bottom: 1rpx solid #e8e8e8;
	position: relative;
	margin-bottom: 30rpx;
	background: #efefef;
}
.modTit view.lineView{
	width: 8rpx;
	height: 36rpx;
	position: absolute;
	left: 30rpx;
	top: 22rpx;
	background: #3c7de9;
}
.modTit view:last-child{
	margin-left: 20rpx;
	float: left;
	font-size: 28rpx;
	color: #121212;
}
.driverMod{
	height: 90rpx;
	line-height: 90rpx;
	border-bottom: 1rpx solid #e8e8e8;
}
.driverMod .driverModTit{
	width: 160rpx;
	height: 100%;
	line-height: 90rpx;
	float: left;
	color: #a9a9a9;
	font-size: 28rpx;
}
.driverMod .driverInp{
	width: 76%;
	height: 100%;
	float: left;
}
.driverMod .driverInp input{
	height: 100%;
	font-size: 28rpx;
	color: #121212;
}





.saveBtn{
	width: 500rpx;
	height: 80rpx;
	line-height: 80rpx;
	background: #3c7de9;
	color: #fff;
	text-align: center;
	font-size: 31rpx;
	padding: 0;
	margin-top: 40rpx;
	font-weight: normal;
	position: relative;
	border-radius: 6rpx;
}