page{
	background: #efefef;
}
.modItem{
	background: #fff;
	margin-bottom: 20rpx;
}
.modTit{
	height: 90rpx;
	line-height: 90rpx;
}
.modTit i,
.modTit view{
	float: left;
	margin-right: 15rpx;
}
.modTit i{
	font-size: 36rpx;
	color: #a9a9a9;
}
.modTit view.modTitTxt{
	font-size: 30rpx;
	font-weight: 620;
	color: #121212;
}
.modTit view.modTag{
	width: 66rpx;
	height: 34rpx;
	line-height: 30rpx;
	border:1rpx solid #ffc107;
	text-align: center;
	font-size: 24rpx;
	margin-top: 29rpx;
	color: #ffc107;
}
.modConItem_one{
	widows: 100%;
	height: 80rpx;
	padding: 15rpx 0;
	border-bottom: 1rpx solid #e8e8e8;
	background: #fff;
}
.modConTit{
	float: left;
	width: 200rpx;
	line-height: 80rpx;
	height: 100%;
	font-size: 28rpx;
	color: #a9a9a9;
}
.modDetCon{
	width: 71%;
	height: 40rpx;
	float: left;
	background: yellow;
}
.modDetCon image{
	width: 80rpx;
	height: 80rpx;
	float: right;
	border-radius: 50%;
}
.modConItem{
	height: 90rpx;
	line-height: 90rpx;
	border-bottom: 1rpx solid #e8e8e8;
	margin-right: 2%;
}
.modConItem.long{
	width: 56%;
	float: left;
}
.modConItem.short{
	width: 40%;
	float: right;
}
.modConItem .modTit{
	width: 200rpx;
	height: 100%;
	font-size: 28rpx;
	color: #a9a9a9;
	float: left;
}
.modConItem.long .modTit{
	width: 140rpx;
}
.modConItem.short .modTit{
	width: 100rpx;
}
.modConItem .modCon{
	width: 70%;
	height: 100%;
	float: left;
	position: relative;
}
.modConItem.long .modCon{
	width: 64%;
}
.modConItem.short .modCon{
	width: 64%;
}
.modConItem .modCon input{
	width: 80%;
	height: 100%;
	font-size: 28rpx;
	color: #121212;
	float: left;
	padding-right: 20%;
	text-align: right;
}
.modConItem .modCon.wholeWid input{
	width: 100%;
	padding-right: 0;
}
.modConItem .modCon.smPadd input{
	width: 92%;
	padding-right: 8%;
}
.modConItem .modCon input[type='number']{
	font-size: 34rpx;
}
.numberHolder{
	font-size: 28rpx;
}
.modConItem .modCon i{
	height: 100%;
	font-size: 28rpx;
	color: #a9a9a9;
	position: absolute;
	right: 0;
	top: 0;
}
.modConItem .modCon text.unit{
	position: absolute;
	right: 0;
	top: 0;
	font-size: 28rpx;
	color: #121212;
}