page{
	background: #efefef;
}
.pubForm{
	background: #fff;
}
.pubModTit{
	height: 80rpx;
	line-height: 80rpx;
	background: #efefef;
	font-size: 28rpx;
	color: #121212;
}
.pubModTit view{
	float: left;
}
.uploadMainImg{
	width: 100%;
	height: 400rpx;
	float: left;
	border:1rpx solid #E8E8E8;
	position:relative;
	display: flex;
	align-items: center;
	justify-content: center;
}
.uploadMainImg i{
	font-size: 100rpx;	
	color: #e8e8e8;
}
.mainHeadImg{
	width: 100%;
	height: 400rpx;
	position: absolute;
	left: 0;
	top: 0;
	z-index: 2;
}
.subTxt{
	font-size: 22rpx; 
	color:#a9a9a9 ;
	font-weight: 620;
	margin-left: 10rpx;
}
.pubModTit i{
	color: #3c7de9;
	font-size: 30rpx;
}
.pubModTit view:last-child{
	margin-left: 10rpx;
}
.pubItem{
	height: 90rpx;
	line-height: 90rpx;
	border-bottom: 1rpx solid #e8e8e8;
}
.pubItem.hasQfTit{
	border-bottom: none;
}
.pubItem.qfInfo input{
	width: 97%;
	text-align: left;
	padding-left:3%;
}
.pubTit{
	width: 220rpx;
	height: 100%;
	font-size: 28rpx;
	color:#606060 ;
	float: left;
}
.pubTit text{
	color:#d32f2f;
	margin-right: 5rpx;
}
.pubItem.noBor{
	border-bottom: none;
}
.pubItem input,
.selItem{
	width: 420rpx;
	float: right;
	height: 100%;
	text-align: right;
	font-size: 28rpx;
	color: #121212;
	padding-right: 10rpx;
}
.selItem i{
	font-size: 24rpx;
	color: #808080;
	float: right;
}
.selItem input{
	width: 380rpx;
	float: left;
}
.selItem text.noSel{
	color: #808080;
}
.selItem text{
	display: inline-block;
	width: 380rpx;
	margin-right: 15rpx;
}
.sureBtn{
	width: 100% !important;
	height: 90rpx;
	line-height: 90rpx;
	background: #3c7de9;
	color: #fff;
	text-align: center;
	font-size: 31rpx;
	padding: 0;
	border-radius:0 !important;
	margin-top: 20rpx;
	font-weight: normal;
}
.pubItem_spec,
.pubItem_spec_1{
	background: #fff;
	padding-bottom: 20rpx;
}
.pubItem_spec .pubTit,
.pubItem_spec_1 .pubTit{
	width: 100%;
	height: 90rpx;
	line-height: 90rpx;
}
.pubItem_spec_1 .pubTit{
	text-align: center;
}
.uploadImg{
	width: 180rpx;
	height: 180rpx;
	line-height: 180rpx;
	border:1rpx dashed #e8e8e8;
	border-radius: 6rpx;
	float: left;
	text-align: center;
}
.uploadImg i{
	font-size: 70rpx;
	color: #e8e8e8;
}
.upImgItem{
	height: 180rpx;
	margin-right: 72rpx;
	float: left;
}
.pubItem_spec_1{
	float: left;
	margin-right: 70rpx;
}
.upImgItem:last-child,
.pubItem_spec_1:last-child{
	margin-right: 0rpx;
}
.remark{
	width: 100%;
	height: 200rpx;
	marign-top:90rpx;
	float: left;
}
.remark textarea{
	width: 96%;
	height: 96%;
	border-radius: 6rpx;
	border:1rpx solid #e8e8e8;
	font-size: 28rpx;
	color: #121212;
	padding: 2%;
}