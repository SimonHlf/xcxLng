.buyGasView{
	width: 600rpx;
	height: 760rpx;
	position: fixed;
	left: 50%;
	margin-left: -300rpx;
	top: 50%;
	margin-top: -460rpx;
	z-index: 101;
}
.buyGasTit{
	height:100rpx;
	line-height: 100rpx;
	background: #3c7de9;
	text-align: center;
	font-size: 30rpx;
	color: #fff;
	border-radius: 8rpx 8rpx 0 0;
}
.buyGasTit.joinComp{
	text-align: left;
	line-height: 120rpx;
	text-indent: 30rpx;
}
.buyGasForm{
	width: 544rpx;
	height: 510rpx;
	background: #fff;
	border-radius: 0 0 8rpx 8rpx;
	padding: 30rpx;
	background: pink;
}
.buyGasForm scroll-view{
	height: 400rpx;
	background: green;
}
.buyGasItem{
	height: 80rpx;
	line-height: 80rpx;
	border-bottom: 1rpx solid #e8e8e8;
	margin-bottom: 10rpx;
}
.buyGasIcon{
	width: 80rpx;
	height: 100%;
	float: left;
	text-align: center;
	color: #c8c8c8;
}
.buyGasIcon i{
	font-size: 36rpx;
}
.buyGasItem input{
	width:460rpx ;
	height: 100%;
	float: left;
	font-size: 28rpx;
	color: #121212;
}
.subBtn{
	width: 240rpx;
	height: 90rpx;
	line-height: 90rpx;
	background: #3c7de9;
	padding: 0;
	color: #fff;
	font-size: 30rpx;
	margin: 50rpx auto 0;
	border-radius: 100rpx;
	font-weight: normal;
}
.subBtn.spec{
	margin:30rpx auto 0;
}
.buyGasForm scroll-view {
	height: 390rpx;
}
.closeView{
	height:88rpx;
	line-height: 88rpx;
	text-align: center;
}
.closeView i{
	font-size: 52rpx;
	color: #fff;
}
.myListItem{
	height: 80rpx;
	line-height: 80rpx;
	font-size: 28rpx;
	color: #121212;
	background: red;
}
.myListItem .myTit{
	width: 80%;
	height: 100%;
	float: left;
	background: yellow;
}
.myListItem .checkView{
	width: 20%;
	height: 100%;
	float: left;
	background: #ccc;
}